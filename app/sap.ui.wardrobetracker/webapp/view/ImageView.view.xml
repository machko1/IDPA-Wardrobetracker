<mvc:View
	controllerName="sap.ui.wardrobetracker.controller.ImageView"
	xmlns="sap.f"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<DynamicPage toggleHeaderOnTitleClick="false">
		<title>
			<DynamicPageTitle>
				<heading>
					
					<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
						<m:Button icon="sap-icon://undo" text="Back" type="Transparent" press=".onBack"/>
						<m:Title text="{name}" wrapping="true" class="sapUiTinyMarginEnd"/>
					</m:FlexBox>
				</heading>
			</DynamicPageTitle>
		</title>
			<content>
				<m:Image src="{image}" width="100%"></m:Image>
			</content>
	</DynamicPage>
</mvc:View>